<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <queries>
        <package android:name="com.whatsapp" />
    </queries>

    <uses-feature android:name="android.hardware.camera" android:required="true"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_toserba23"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_toserba23"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".OfflineActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".fragment.ProductDetail"
            android:label="@string/detail_product_activity_label"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".fragment.ProductDetailOffline"
            android:label="@string/detail_product_offline_activity_label"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".fragment.SaleLine"
            android:label="@string/detail_sale_line_activity_label"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".fragment.PartnerDetail"
            android:label="@string/detail_res_partner_title"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".fragment.StockDetail"
            android:label="@string/detail_stock_detail_activity_label"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".fragment.AttendanceScanner"
            android:label="@string/attendance_scan_title"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".fragment.LeaveDetail"
            android:label="@string/detail_leave_detail_activity_label"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>